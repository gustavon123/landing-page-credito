<body>
  <div class="container">
    <h1>Solicite seu Crédito Agora!</h1>
    <form id="creditoForm">
      <label for="nome">Nome completo:</label>
      <input type="text" id="nome" name="nome" required>

      <label for="telefone">WhatsApp:</label>
      <input type="tel" id="telefone" name="telefone" placeholder="(XX) XXXXX-XXXX" required>

      <label for="valor">Valor desejado:</label>
      <input type="text" id="valor" name="valor" required>

      <label for="finalidade">Finalidade do crédito:</label>
      <input type="text" id="finalidade" name="finalidade" required>

      <button type="submit">Solicitar Agora</button>
    </form>
  </div>

  <script>
    document.getElementById('creditoForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const nome = document.getElementById('nome').value;
      const telefone = document.getElementById('telefone').value;
      const valor = document.getElementById('valor').value;
      const finalidade = document.getElementById('finalidade').value;

      const mensagem = `Olá, me chamo ${nome}. Estou interessado em crédito no valor de ${valor} para ${finalidade}. Meu WhatsApp é: ${telefone}`;
      const whatsappURL = `https://wa.me/55SEUNUMERO?text=${encodeURIComponent(mensagem)}`;

      window.open(whatsappURL, '_blank');
    });
  </script>
